@model site.Models.FORMATION_GROUPE
@{
    ViewBag.Title = "Formation_groupe";
    Layout = "~/Views/Shared/_Formation_GroupeLayout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formation groupe</title>
    <link rel="stylesheet" href=@Url.Content("/Content/ss/formation_groupe.css")>
</head>

<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <script src=/Content/ss/JSGRP.js"></script>

        <div class="style">

            <form action="#">


                <h4>Cordonnées du service:</h4>



                <label>Libelle:</label>
                @Html.EditorFor(model => model.NOM_FR, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOM_FR, "", new { @class = "text-danger" })
                <br>
                <label>Entreprise:</label>
                @Html.EditorFor(model => model.Nom_Entrprise, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nom_Entrprise, "", new { @class = "text-danger" })
                <br>
                <label>Secteur D'activite:</label>


                @{
                    List<SelectListItem> item = new List<SelectListItem>();
                    item.Add(new SelectListItem { Text = "Communication", Value = "Communication" });
                    item.Add(new SelectListItem { Text = "Coaching", Value = "Coaching" });
                    item.Add(new SelectListItem { Text = "Gestion de ressource humain et management", Value = "Gestion de ressource humain et management" });
                    item.Add(new SelectListItem { Text = "délégué médicale", Value = "délégué médicale" });
                    item.Add(new SelectListItem { Text = "Commerce et marketing", Value = "Commerce et marketing" });
                }


                @Html.DropDownListFor(model => model.SECTEUR_ACTIVITE, item, "Selectionner", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SECTEUR_ACTIVITE, "", new { @class = "text-danger" })

                <label>Mission:</label>
                @Html.EditorFor(model => model.MISSION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MISSION, "", new { @class = "text-danger" })
                <label>Effectif du service :</label>
                @Html.EditorFor(model => model.EFFECTIF, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EFFECTIF, "", new { @class = "text-danger" })
                <label>Objectifs du service pour l'année n+1:</label>
                @Html.EditorFor(model => model.OBJECTIF, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OBJECTIF, "", new { @class = "text-danger" })
                <label>Besoin de formation:</label> <br> <br> <br>
                <label> >>Besoins individuels:</label>
                @Html.EditorFor(model => model.BESOIN_INDIVIDUELE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BESOIN_INDIVIDUELE, "", new { @class = "text-danger" })
                <label> >>Besoins  collectifs:</label>
                @Html.EditorFor(model => model.BESOIN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BESOIN, "", new { @class = "text-danger" })



                <input type="submit" value="Envoyer" class="btn btn-default" />
            </form>

        </div>

        <script src=/Content/ss/JSGRP.js"></script>

    }
</body>

